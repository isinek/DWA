	   <h3>Vijesti</h3>

      {% for news in allnews %}
        {# otvori div za redak #}
		{% if (loop.index-1) % 3 == 0 %}
			<div class="row"> 
		{% endif %}
				<div class="col-md-4 noBackground">
					<h3>{{ news.title|upper }}</h3>{{ loop.index }}
					<p>autor: {{ news.author }} | {{ news.date }}</p>
					
					{# Twig ima i bolji način za rezanje teksta, ali ovo je je najjednostavniji u ovom trenutku - vraća prvih 200 znakova teksta #}
					 
					{{ news.text[:200] }}
					<a href="news/{{ news.id }}" > Pogledaj više </a>
					
					        
				</div>
		{# zatvori div za redak #}
		{% if (loop.index) % 3 == 0 %}
			</div > 
		{% endif %}                
	{% endfor %}		
       
      

